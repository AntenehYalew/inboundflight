<%- include("../partials/header") %> 

<div class="container station-main">
    <div class="row-edit">
                <form class="form-inputs-station" action="/stationadmin/<%=selectedFlight[0].flight_id%>?_method=PUT" method="POST">
                    <div class="row">
                        <div class="col-md-5">
                            <label for="flightdetail" class="sr-only">Flight detail</label>
                            <input type="text" id="inputtext" name="flight" class="form-control" value="<%=selectedFlight[0].flight_number%>" minlength="3" maxlength="6" required>
                        </div>
                        <div class="col-md-7">
                            <label for="timezone" class="sr-only">Time zone</label>
                              <select class="custom-select" id="inputGroupSelect01" name="timezone" required>
                                <option value='{"time_zone":"<%=selectedFlight[0].standard_time_zone%>", "readable_time_zone":"<%=selectedFlight[0].readable_time_zone%>"}'><%=selectedFlight[0].readable_time_zone%> </option>
                                <option value="">Departure time zone</option>
                                <option value='{"time_zone":"America/New_York", "readable_time_zone":"Eastern Daylight Time"}'>Eastern Daylight Time</option>
                                <option  value='{"time_zone":"America/Chicago", "readable_time_zone":"Central Daylight Time"}' >Central Daylight Time</option>
                                <option  value='{"time_zone":"America/Denver", "readable_time_zone":"Mountain Daylight Time"}'>Mountain Daylight Time</option>
                                <option  value='{"time_zone":"America/Phoenix", "readable_time_zone":"Mountain Standard Time"}'>Mountain Standard Time</option>
                                <option  value='{"time_zone":"America/Los_Angeles", "readable_time_zone":"Pacific Daylight Time"}'>Pacific Daylight Time</option>
                                <option value='{"time_zone":"America/Anchorage", "readable_time_zone":"Alaska Daylight Time"}'>Alaska Daylight Time</option>
                                <option  value='{"time_zone":"America/Honolulu", "readable_time_zone":"Hawaii-Aleutian Standard Time"}' >Hawaii-Aleutian Standard Time</option>
                              </select>
                        </div>
                    </div>
                    <button class="btn btn-lg btn-block signinbtn" type="submit">Edit a flight</button>
                </form>
    </div>
</div>

 


<%- include("../partials/footer") %> 